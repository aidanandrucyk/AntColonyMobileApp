<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ant_colony_background"
    android:contentDescription="@string/settings"
    android:hapticFeedbackEnabled="true"
    android:scaleX="1"
    android:scaleY="1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/staticAnts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/abeezee"
        android:gravity="center"
        android:text="@string/totalAnts"
        android:textColor="#3D405B"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        app:autoSizeMaxTextSize="22sp"
        app:autoSizeMinTextSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/AntCount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/settingsButton"
        app:layout_constraintHorizontal_bias="0.635"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UnemployedCount" />

    <TextView
        android:id="@+id/staticUnemployed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/abeezee"
        android:gravity="center"
        android:text="@string/UnemployedAnts"
        android:textColor="#3D405B"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:autoSizeMaxTextSize="22sp"
        app:autoSizeMinTextSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/UnemployedCount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ColonyName" />

    <TextView
        android:id="@+id/UnemployedCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:textColor="#3D405B"
        android:textSize="45sp"
        app:autoSizeMaxTextSize="60sp"
        app:autoSizeMinTextSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/staticAnts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/staticUnemployed" />

    <TextView
        android:id="@+id/AntCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-black"
        android:textColor="#3D405B"
        android:textSize="17sp"
        app:autoSizeMaxTextSize="14sp"
        app:autoSizeMinTextSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/queen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/staticAnts" />

    <ImageButton
        android:id="@+id/queen"
        android:layout_width="227dp"
        android:layout_height="279dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/queenButton"
        android:hapticFeedbackEnabled="false"
        android:scaleX="1.5"
        android:scaleY="1.1"
        android:soundEffectsEnabled="false"
        android:tint="#27190202"
        app:layout_constraintBottom_toTopOf="@+id/toGrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AntCount"
        app:srcCompat="@drawable/tempant" />

    <TextView
        android:id="@+id/toGrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/abeezee"
        android:gravity="center"
        android:text="@string/ToGROW"
        android:textColor="#3D405B"
        android:textSize="15sp"
        android:textStyle="normal|bold"
        app:autoSizeMaxTextSize="12sp"
        app:autoSizeMinTextSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/currentStrength"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/queen" />

    <!-- tools:layout_editor_absoluteY="502dp" />
        -->

    <Button
        android:id="@+id/growButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/pressed_button"
        android:hapticFeedbackEnabled="true"
        android:shadowColor="#000000"
        android:soundEffectsEnabled="false"
        android:text="@string/g_r_o_w"
        android:textColor="@color/colorDark"
        app:layout_constraintBottom_toTopOf="@+id/adView"
        app:layout_constraintEnd_toStartOf="@+id/liftButton"
        app:layout_constraintStart_toEndOf="@+id/biteButton"
        app:layout_constraintTop_toBottomOf="@+id/currentStrength" />

    <Button
        android:id="@+id/liftButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/pressed_button"
        android:hapticFeedbackEnabled="true"
        android:shadowColor="#000000"
        android:soundEffectsEnabled="false"
        android:text="@string/l_i_f_t"
        android:textColor="@color/colorDark"
        app:layout_constraintBottom_toTopOf="@+id/adView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/growButton"
        app:layout_constraintTop_toBottomOf="@+id/currentStrength" />

    <Button
        android:id="@+id/biteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/pressed_button"
        android:hapticFeedbackEnabled="true"
        android:shadowColor="#000000"
        android:soundEffectsEnabled="false"
        android:text="@string/b_i_t_e"
        android:textColor="@color/colorDark"
        app:layout_constraintBottom_toTopOf="@+id/adView"
        app:layout_constraintEnd_toStartOf="@+id/growButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentStrength" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/colorLight"
        app:adSize="BANNER"
        app:adUnitId="@string/banner_ad_unit_id"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="66dp"
        android:layout_height="53dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:alpha="1"
        android:background="#00FFFFFF"
        android:fontFamily="@font/abeezee"
        android:gravity="center"
        android:hapticFeedbackEnabled="true"
        android:padding="4dp"
        android:soundEffectsEnabled="false"
        android:text="@string/settingsCog"
        android:textColor="#3D405B"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/upgradeButton"
        android:layout_width="55dp"
        android:layout_height="63dp"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="2dp"
        android:alpha="1"
        android:background="#00FFFFFF"
        android:fontFamily="@font/abeezee"
        android:gravity="center_horizontal|top"
        android:hapticFeedbackEnabled="true"
        android:padding="0dp"
        android:soundEffectsEnabled="false"
        android:text="@string/upgradeArrow"
        android:textColor="#3D405B"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ColonyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:autofillHints=""
        android:ems="10"
        android:gravity="center"
        android:hint="@string/colony_name"
        android:imeActionLabel="Done"
        android:imeOptions="actionDone"
        android:inputType="textShortMessage"
        android:overScrollMode="never"
        android:scaleX="1"
        android:scaleY="1.1"
        android:scrollbarDefaultDelayBeforeFade="0"
        android:scrollbarFadeDuration="0"
        android:singleLine="true"
        android:textColor="#3D405B"
        android:textColorHint="#3D405B"
        android:textScaleX="1.1"
        android:textStyle="bold"
        android:verticalScrollbarPosition="defaultPosition"
        app:layout_constraintBottom_toTopOf="@+id/staticUnemployed"
        app:layout_constraintEnd_toEndOf="@+id/settingsButton"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currentStrength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="85dp"
        android:fontFamily="@font/abeezee"
        android:text="@string/StrengthText"
        android:textColor="#3D405B"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/adView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toGrow" />

</androidx.constraintlayout.widget.ConstraintLayout>